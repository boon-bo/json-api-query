{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es2017"],
    "sourceMap": false,
    "strict": false,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false,
  "files": ["index.ts"]
}
